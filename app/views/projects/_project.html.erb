<hr/>
<% obj.each do |project| %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="card bg-light mb-3">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to project.name, project_path(project) %>
          </h4>
          <p class="card-text"><%= project.description %></p>
          <p class="card-text">
            <small class="text-muted">
              Created <%= time_ago_in_words(project.created_at) %> ago by 
              <%= project.manager.name.capitalize %>
            </small>
          </p>
         
          <div class="project-actions">
            <% if can?(:update, project) %>
              <%= link_to "Edit this project", edit_project_path(project),
              class: "btn btn-warning btn-sm" %>
            <% end %>
            <% if can?(:destroy, project) %>
              <%= button_to "Delete this project", project_path(project),
              method: :delete, data: { turbo_confirm: "Are you sure you want to delete this project?" },
              class: "btn btn-danger btn-sm" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
